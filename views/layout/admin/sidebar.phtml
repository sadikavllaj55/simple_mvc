/**
 * @param $controller
 * @param $ac
 * @return bool
 */
function is_page($controller, $ac = null) {
    $page = $_GET['page'];
    $action = $_GET['action'] ?? '';

    if ($ac == null) {
        return $page == $controller;
    }

    return $page == $controller && $action == $ac;
}
